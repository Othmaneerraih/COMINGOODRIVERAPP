<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/gooContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_normal">

        <RelativeLayout
            android:id="@+id/gooBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_normal"
            android:background="@drawable/borderbox_round"
            android:padding="@dimen/margin_normal">

            <ImageView
                android:id="@+id/ic_car"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_car" />

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toEndOf="@id/ic_car"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_app_name"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_toEndOf="@id/ic_car"
                android:text="4 Seats" />

            <View
                android:id="@+id/view_one"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/color_ash" />

            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!---->
            <!--</RelativeLayout>-->

            <ImageView
                android:id="@+id/iv_promo_code"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_toEndOf="@id/view_one"
                android:src="@drawable/ic_promo_code" />

            <TextView
                android:id="@+id/promoCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/iv_promo_code"
                android:text="PROMO CODE"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_car"
                android:layout_marginTop="@dimen/margin_normal"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:layout_weight="0.5"
                    android:background="@color/color_ash" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_weight="0.5"
                    android:background="@color/color_ash" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_car"
                android:layout_marginStart="50dp"
                android:layout_marginTop="@dimen/margin_large"
                android:text="CASH"
                android:textColor="@android:color/black"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cash"
                android:layout_marginStart="40dp"
                android:text="Payment" />

            <View
                android:id="@+id/view_two"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_below="@id/ll_view"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="72dp"
                android:background="@color/color_ash" />


            <TextView
                android:id="@+id/tv_mad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_car"
                android:layout_marginStart="50dp"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_toEndOf="@+id/view_two"
                android:text="MAD 10-13"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_estimate_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cash"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@+id/view_two"
                android:text="Estimated Price" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_alignTop="@+id/none"
            android:layout_alignBottom="@+id/none"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:clickable="true">

        </RelativeLayout>

        <ImageButton
            android:id="@+id/none"
            android:layout_width="130dp"
            android:layout_height="49dp"
            android:layout_above="@+id/gooBox"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:clickable="false" />

        <ImageButton
            android:id="@+id/cancelRequest"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_above="@+id/gooBox"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/goo_layout" />

        <ImageButton
            android:id="@+id/gooButton"
            android:layout_width="130dp"
            android:layout_height="49dp"
            android:layout_above="@+id/gooBox"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@drawable/goo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_end_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:background="@drawable/borderbox_round"
        android:padding="@dimen/margin_normal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ic_car"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_car" />

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_toEndOf="@id/ic_car"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_seats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_app_name"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_toEndOf="@id/ic_car"
            android:text="4 Seats" />

        <View
            android:id="@+id/view_one"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/color_ash" />

        <RelativeLayout
            android:id="@+id/promocode_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/view_one">

            <ImageView
                android:id="@+id/iv_promo_code"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:src="@drawable/ic_promo_code" />

            <TextView
                android:id="@+id/tv_promo_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/iv_promo_code"
                android:text="PROMO CODE"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_car"
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal"
            android:weightSum="1">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/margin_normal"
                android:layout_weight="0.5"
                android:background="@color/color_ash" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_weight="0.5"
                android:background="@color/color_ash" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_car"
            android:layout_marginStart="50dp"
            android:layout_marginTop="@dimen/margin_large"
            android:text="CASH"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cash"
            android:layout_marginStart="40dp"
            android:text="Payment" />

        <View
            android:id="@+id/view_two"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_below="@id/ll_view"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="72dp"
            android:background="@color/color_ash" />


        <TextView
            android:id="@+id/tv_mad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_car"
            android:layout_marginStart="50dp"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_toRightOf="@+id/view_two"
            android:text="MAD 10-13"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_estimate_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cash"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/view_two"
            android:text="Estimated Price" />
    </RelativeLayout>
</RelativeLayout>
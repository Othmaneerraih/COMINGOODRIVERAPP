<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/borderbox_round"
    android:layout_margin="@dimen/margin_normal"
    android:padding="@dimen/margin_normal">

    <RelativeLayout
        android:id="@+id/rl_call_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borderbox_round"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_driver_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_driver"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="2" />

        <TextView
            android:id="@+id/tv_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:layout_toRightOf="@+id/iv_driver_image"
            android:text="User Name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_size_large" />

        <TextView
            android:id="@+id/iv_total_ride_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_driver_name"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/iv_driver_image"
            android:text="User Name"
            android:textColor="@color/color_dark_ash" />

        <TextView
            android:id="@+id/iv_car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_total_ride_number"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/iv_driver_image"
            android:text="123213"
            android:textColor="@color/color_dark_ash" />

        <LinearLayout
            android:id="@+id/ll_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_toRightOf="@+id/tv_driver_name"
            android:background="@drawable/border_box"
            android:orientation="horizontal"
            android:padding="5dp">

            <RatingBar
                android:id="@+id/rb_user"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="1"
                android:rating="1" />

            <TextView
                android:id="@+id/iv_total_rating_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/rb_user"
                android:text="4.5"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_call_driver"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_call"
            android:layout_toRightOf="@id/ll_call"
            android:src="@drawable/call" />

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_call"
            android:layout_toRightOf="@id/ll_call"
            android:src="@drawable/delete_button"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_voip_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/layout_background_rounded_corner"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_appelle_telephone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Appelle telephonique"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tv_appelle_voip"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Appelle VOIP"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>
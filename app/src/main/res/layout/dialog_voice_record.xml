<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/record_bg">

    <LinearLayout
        android:id="@+id/top_txt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/taha"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/margin_normal"
            android:fontFamily="@font/roboto_light"
            android:text="@string/Appreciate"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/roboto"
            android:text="@string/PS"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/record_audio_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/top_txt_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/recording_circles">

        <ImageButton
            android:id="@+id/recordAudio"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mic_record" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/playAudio"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/top_txt_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/play_button"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/pauseAudio"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/top_txt_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/pause_button"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/deleteAudio"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/top_txt_layout"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/record_audio_layout"
        android:background="@drawable/delete_button" />


    <TextView
        android:id="@+id/textView20"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton6"
        android:layout_below="@+id/record_audio_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/Record"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/next_bt" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_round_background"
    android:gravity="center"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_sure_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Please enter a valid promo code"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_promo_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sure_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/white"
        android:gravity="center"
        android:hint="COMINGOO20"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="#8af4f1f1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_promo_code"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel_promo_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Cancel"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btn_ok_promo_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/btn_cancel_promo_code"
            android:background="@drawable/rounded_corner"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Confirm"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>
</RelativeLayout>